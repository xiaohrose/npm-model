{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug TS with ts-node",
            "skipFiles": ["<node_internals>/**"],
            "runtimeArgs": ["-r", "ts-node/register"],  // 使用 ts-node
            "args": ["${workspaceFolder}/src/index.ts"],  // 你的入口文件
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}